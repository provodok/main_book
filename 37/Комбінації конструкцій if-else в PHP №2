<?php
  $day = 20;
	
	if ($day >= 1 and $day <= 10) {
		echo 'перша декада'; 
	}
	
	if ($day > 10 and $day <= 20) {
		echo 'друга декада'; 
	}
	
	if ($day >= 21 and $day < 30) {
		echo 'третя декада'; 
	}
?>


<?php
  $day = 20;
	
	if ($day >= 1 and $day <= 10) {
		echo 'перша декада'; 
	} elseif ($day > 10 and $day <= 20) {
		echo 'друга декада'; 
	} elseif ($day >= 21 and $day < 30) {
		echo 'третя декада'; 
	}
?>
